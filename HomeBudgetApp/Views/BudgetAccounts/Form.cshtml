@model HomeBudgetApp.ViewModels.AccountFormViewModel

@if (Model.Account.Id == 0)
{
    ViewBag.Title = "New Account";
}
else
{
    ViewBag.Title = $"Edit Account - {Model.Account.Name}";
}


<h2 class="media-heading">@ViewBag.Title</h2>
<hr class="my-4" />


@using (@Html.BeginForm("Save", "BudgetAccounts"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Account.Name)
        @Html.TextBoxFor(m => m.Account.Name, new { @class = "form-control " })
        @Html.ValidationMessageFor(m => m.Account.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Account.TypeId, "Account Type")
        @Html.DropDownListFor(m => m.Account.TypeId, new SelectList(Model.AccountTypes, "Id", "Name"), "Select type of your account", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Account.TypeId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group" id="3333">
        @Html.LabelFor(m => m.Account.OpeningBalance)
        @Html.TextBoxFor(m => m.Account.OpeningBalance, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Account.OpeningBalance, "", new { @class = "text-danger" })
    </div>

    <hr class="my-4" />

    @Html.HiddenFor(m => m.Account.Id)

    <div class="text-center">
        <button type="submit" class="btn btn btn-outline-success">Save</button>
        <a href="#" class="btn btn btn-outline-warning">Cancel</a>
    </div>
}

@section Scripts
{
    @*Client side validation*@
    @Scripts.Render("~/bundles/jqueryval")


    @*Sripts for decimal separator global culture*@
    <script src="@Url.Content("~/Scripts/jquery.globalize/globalize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.globalize/cultures/globalize.culture.da-DK.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $.validator.methods.number = function (value, element) {
            return !isNaN(Globalize.parseFloat(value));
        }

        $(document).ready(function () {
            Globalize.culture('da-DK');
        });
    </script>


}