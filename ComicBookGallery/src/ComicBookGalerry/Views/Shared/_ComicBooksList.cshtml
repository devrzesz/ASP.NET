@model ComicBookGalerry.Models.ComicBook[]

<div class="row">
    @foreach (var comicBook in Model)
    {
        <div class="col-md-3">
            @Html.ActionLink(comicBook.DisplayText, "Detail", "ComicBooks", new { comicBook.Id }, null)

            <a href="@Url.Action("Detail","ComicBooks", new { id = comicBook.Id })">
                <img src="/Images/@comicBook.CoverImageFileName" alt="@comicBook.DisplayText" class="img-responsive" />
            </a>
        </div>
    }
</div>